{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "Bundler",
    "experimentalDecorators": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "strictNullChecks": true,
    "types": ["node"]
  },
  "extends": [
    "@tsconfig/node20/tsconfig.json",
    "@vue/tsconfig/tsconfig.dom.json"
  ],
  "include": ["src/**/*", "src/**/*.vue"]
}
